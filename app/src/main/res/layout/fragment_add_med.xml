<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f9f9f9"
            android:paddingBottom="350dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#f9f9f9">
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_arrow_back_black_red_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="110dp"
                    android:text="เพิ่มประวัติการรักษา"
                    android:fontFamily="@font/superspaceregular"
                    android:textColor="#565656"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

            </RelativeLayout>



            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="โรค: "
                        />

                    <EditText android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_pet"
                        android:padding="10dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="60px"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:id="@+id/txtName"
                        android:fontFamily="@font/superspaceregular"
                        android:inputType="text"
                        android:hint="โรค"/>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="รายละเอียด: "
                        />

                    <EditText android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_pet"
                        android:padding="10dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="60px"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:id="@+id/txtDescription"
                        android:fontFamily="@font/superspaceregular"
                        android:inputType="text"
                        android:hint="รายละเอียด"/>

                </TableRow>


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="วันเที่: "
                        />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_pet"
                        android:layout_marginTop="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="80dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="30px"
                        android:textSize="20dp"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#000000"
                        android:id="@+id/txtDate"
                        android:hint="วันที่"/>
                </TableRow>
            </TableLayout>



            <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C54953"
                android:id="@+id/btnSave"
                android:fontFamily="@font/superspaceregular"
                android:padding="10dp"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:textColor="#ffffff"
                android:text="บันทึก"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>