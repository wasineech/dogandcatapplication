<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegUserActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f9f9f9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/colorNav">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:fontFamily="@font/anydore"
                    android:text="Register"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="50sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/superspaceregular"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="สมัครสมาชิก"/>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp">

                <TableRow
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="ชื่อ: "
                        />

                    <EditText
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:background="@drawable/edit_text_reg"
                        android:fontFamily="@font/superspaceregular"
                        android:drawableLeft="@drawable/ic_person_black_24dp"
                        android:padding="10dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="40px"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:hint="  ชื่อ-นามสกุล"
                        android:inputType="textPersonName"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZกขฃคฅฆงจฉชซฌญฎฏฐฑฒณดตถทธนบปผฝพฟภมยรลวศษสหฬอฮะาิีึื่้๊๋์ัุูเแโใไๅๆ "/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="อีเมล: "
                        />

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:background="@drawable/edit_text_reg"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:padding="10dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="40px"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:inputType="textEmailAddress"
                        android:hint="  ที่อยู่อีเมล"/>

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="รหัสผ่าน: "
                        />

                    <EditText
                        android:id="@+id/txtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:background="@drawable/edit_text_reg"
                        android:drawableLeft="@drawable/ic_https_black_24dp"
                        android:padding="10dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="40px"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:hint="  รหัสผ่าน"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="ยืนยัน: "
                        />

                    <EditText
                        android:id="@+id/txtPassword2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:background="@drawable/edit_text_reg"
                        android:drawableLeft="@drawable/ic_https_black_24dp"
                        android:padding="10dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="40px"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:hint="  ยืนยันรหัสผ่าน"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superspaceregular"
                        android:textColor="#565656"
                        android:textSize="25dp"
                        android:text="จังหวัด: "
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_reg"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="40px"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/superspaceregular"
                        android:id="@+id/province">
                    </Spinner>
                </TableRow>
            </TableLayout>


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="#C54953"
                android:fontFamily="@font/superspaceregular"
                android:padding="10dp"
                android:text="สมัครสมาชิก"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>