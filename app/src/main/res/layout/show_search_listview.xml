<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_marginTop="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pet_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cat"/>

        <TextView
            android:id="@+id/pet_name_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="โบเก้(เพศเมีย)"
            android:layout_below="@+id/pet_profile"
            android:fontFamily="@font/superspaceregular"
            android:textColor="#000000"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/pet_age_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_below="@+id/pet_name_gender"
            android:text="อายุ: 8 เดือน สายพันธุ์: แบงกอล"
            android:fontFamily="@font/superspaceregular"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <Button android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/btnMatch"
            android:layout_below="@+id/pet_age_breed"
            android:background="@drawable/heart1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"/>
    </RelativeLayout>
</LinearLayout>